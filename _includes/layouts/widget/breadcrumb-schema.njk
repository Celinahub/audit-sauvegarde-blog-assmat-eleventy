{% set breadcrumb = eleventyNavigation %}
{% if breadcrumb and breadcrumb.key %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {% if page.url == "/" %}
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Accueil",
      "item": "https://celine-assmat-bretigny.fr/"
    }
    {% else %}
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Accueil",
      "item": "https://celine-assmat-bretigny.fr/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "{{ breadcrumb.key }}",
      "item": "https://celine-assmat-bretigny.fr{{ page.url }}"
    }
    {% endif %}
  ]
}
</script>
{% endif %}
