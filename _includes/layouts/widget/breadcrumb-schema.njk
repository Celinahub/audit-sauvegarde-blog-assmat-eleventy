{% if eleventyNavigation and eleventyNavigation.parent != null or page.url != '/' %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Accueil",
      "item": "{{ '/' | absoluteUrl }}"
    }
    {% if eleventyNavigation %}
      ,{
        "@type": "ListItem",
        "position": 2,
        "name": "{{ title }}",
        "item": "{{ page.url | absoluteUrl }}"
      }
    {% endif %}
  ]
}
</script>
{% endif %}
